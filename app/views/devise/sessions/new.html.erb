<h2><%= t('devise.sessions.sign_in')%></h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label t('devise.sessions.nickname_or_email') %><br />
    <%= f.text_field :login, autofocus: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label t('devise.sessions.password') %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label t('devise.sessions.remember') %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit t('devise.sessions.sign_in'), class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
